<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantidade de pessoas"
        android:textSize="7pt"
        android:id="@+id/lblPessoas"
        android:layout_gravity="center_horizontal" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/skPessoas"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="7pt"
        android:text="Luminosidade do ambiente"
        android:id="@+id/lblLuminosidade"
        android:layout_gravity="center_horizontal" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skLuminosidade"
        android:layout_gravity="center_horizontal"
        android:max="100" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar todas as imagens"
        android:id="@+id/chkTodas"
        android:layout_gravity="center_horizontal" />

    <GridView
        android:id="@+id/gvFotos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:numColumns="3"
        android:stretchMode="columnWidth" />

</LinearLayout>